<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <!--<item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>-->
    </style>

    <!--Action bar theme-->
    <style name="AppTheme.ActionBar" parent="AppTheme.ActionBar.Base">
        <!--<item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>-->
    </style>

    <style name="AppTheme.ActionBar.Base" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="AppTheme.ActionBar.Event" parent="AppTheme.ActionBar">
        <item name="titleTextAppearance">@style/AppTheme.ActionBar.TitleTextStyle</item>
    </style>


    <!--Fonts style-->
    <style name="AppTheme.ActionBar.TitleTextStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--<item name="android:textColor">@color/colorFontBar</item>-->
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="DateFont">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ListFont">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/colorFontContent</item>
    </style>

    <style name="ListFont.Title">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/colorFontTitle</item>
    </style>

    <style name="ListFont.xLarge">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textColor">@color/colorFontTitle</item>
    </style>

    <style name="ListFont.xxLarge">
        <item name="android:textSize">@dimen/text_size_xxlarge</item>
        <item name="android:textColor">@color/colorFontTitle</item>
    </style>

    <style name="ListFont.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/colorFontContent</item>
    </style>

    <style name="ListFont.xSmall">
        <item name="android:textSize">@dimen/text_size_xsmall</item>
        <item name="android:textColor">@color/colorFontContentLighter</item>
    </style>

    <style name="Theme.AppTheme.Light.NoActionBar.TranslucentDecor" parent="android:Theme.Material.Light.NoActionBar.TranslucentDecor" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
