<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.00"
            android:orientation="vertical">

            <LinearLayout
                android:weightSum="7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/list_title"
                    android:layout_width="219dp"
                    android:layout_height="20dp"
                    android:text="Title"
                    android:textSize="17dp"
                    android:layout_weight="5"/>

                <TextView
                    android:id="@+id/list_tag"
                    android:layout_width="101dp"
                    android:layout_height="20dp"
                    android:gravity="right|bottom"
                    android:text="tag1, tag2"
                    android:textSize="9dp"
                    android:layout_weight="2"/>
            </LinearLayout>

            <TextView
                android:id="@+id/list_content"
                android:layout_marginTop="2dp"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="12dp"
                android:text="content, content, content, content content content content content content, content, content, content, content, content, content, content, content, content, content, content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_mon"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:gravity="center"
                android:text="Nov."
                android:textSize="9dp" />

            <TextView
                android:id="@+id/list_date"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="30"
                android:textSize="30dp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/list_location"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="123 Davidson Rd., Piscataway, NJ"
        android:textSize="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"/>


</LinearLayout>